<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?android:attr/colorBackground">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferências"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aparência"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="?android:attr/textColorPrimary" />

        <Switch
            android:id="@+id/switch_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Modo escuro"
            android:layout_marginBottom="8dp" />

        <Switch
            android:id="@+id/switch_high_contrast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Alto contraste"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acessibilidade"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamanho da fonte"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="?android:attr/textColorPrimary" />

        <SeekBar
            android:id="@+id/seek_font_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="16"
            android:progress="10"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_font_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamanho da fonte: 1.0x"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idioma"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="?android:attr/textColorPrimary" />

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/button_save_prefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar preferências"
            android:textSize="16sp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>

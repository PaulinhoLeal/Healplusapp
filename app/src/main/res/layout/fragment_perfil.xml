<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferências" />

        <Switch
            android:id="@+id/switch_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modo escuro" />

        <Switch
            android:id="@+id/switch_high_contrast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alto contraste" />

        <SeekBar
            android:id="@+id/seek_font_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="16"
            android:progress="10" />

        <TextView
            android:id="@+id/text_font_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamanho da fonte: 1.0x" />

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_save_prefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar preferências" />
    </LinearLayout>
</ScrollView>

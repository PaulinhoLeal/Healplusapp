<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_ficha"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header com nome e status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nome_paciente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Paciente"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/tv_localizacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📍 Localização"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_status_agendado"
                android:padding="8dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:id="@+id/iv_status_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agendado"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

        <!-- Informações da consulta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_data_consulta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📅 Data da Consulta"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_intensidade_dor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🟢 Sem dor"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

        <!-- Botões de ação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_visualizar"
                style="@style/Heal.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👁️ Visualizar"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/my_app_blue"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_editar"
                style="@style/Heal.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✏️ Editar"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
